{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "StudentForeignVerification": {
      "$ref": "#/definitions/StudentForeignVerification"
    }
  },
  "required": ["StudentForeignVerification"],
  "title": "StudentForeignVerification",
