    "certificateTemplates": {
      "StudentForeignVerificationTemp": "https://raw.githubusercontent.com/kumarpawantarento/templates/main/nursingANM.html",
      "StudentForeignVerification": "https://raw.githubusercontent.com/kumarpawantarento/templates/main/nursingANM.html"
    }
  }
